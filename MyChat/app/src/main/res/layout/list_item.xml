<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sender_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:padding="10dp"
        android:background="@drawable/sender_shape" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/message_text_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="gjgjgjvnvnvnvjjgjg"
                android:textColor="@color/bodyTextColor"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/sender_sentImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/message_time_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gjgjgjjgj"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/receiver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/receiver_shape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/message_text_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="gjjnvnvnvnvnvnvnvjjgjg"
                android:textColor="@color/bodyTextColor"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/receiver_sentImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/message_time_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/message_text_receiver"
                android:textSize="10sp"
                android:text="gjgjgjjgj" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>